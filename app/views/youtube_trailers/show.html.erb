<div class="main">
  <div class="show-container">
    <!-- Page Header -->
    <header class="text-center">
      <h1><%= @title || "No title available" %></h1>
      <p>ID Tag: <strong><%= params[:id] %></strong></p>
      <a href="<%= @video_link %>" target="_blank">Watch on YouTube</a>
    </header>

    <!-- Main Content -->
    <div class="content">
      <!-- Video Section -->
      <div class="video-section">
        <% if @video_url.present? %>
          <video controls autoplay>
            <source src="<%= @video_url %>" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        <% else %>
          <p>No video available for this ID tag.</p>
        <% end %>
      </div>

      <!-- Thumbnail and Description Section -->
      <div class="thumbnail-description">
        <!-- Thumbnail -->
        <% if @thumbnail_url.present? %>
          <div class="thumbnail">
            <img src="<%= @thumbnail_url %>" alt="Thumbnail">
          </div>
        <% else %>
          <p>No thumbnail available for this ID tag.</p>
        <% end %>

        <!-- Description -->
        <div class="description">
          <h2>Description</h2>
          <p><%= @description || "No description available" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
